{% extends 'back/base.html.twig' %}

{% block body %}
  <div class="col-12">
    <h1>
      Liste des catégories
    </h1>
    <a href="{{ path('back_category_add') }}" class="fs-4">Ajouter une catégorie</a>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">
          ID
        </th>
        <th scope="col">
          Nom
        </th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr class="table-{{ cycle(['primary', 'secondary'], loop.index) }}">
          <th scope="row">
            {{ category.id }}
          </th>
          <td>
            {{ category.name }}
          </td>
          <td>
            <a href="{{
              path(
                'back_category_edit',
                {
                  id: category.id
                }
              )
              }}"
              class="fs-4">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </a>
            <form action="{{
              path(
                'back_category_delete',
                {
                  id: category.id
                }
              )
              }}"
              class="d-inline"
              method="post">
              <button class="btn btn-link p-0 mb-2 fs-4">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </button>
              <input type="hidden" name="_method" value="delete" />
              {# On ajoute un token anti-csrf pour s'assurer que la requête reçue n'est pas forgée #}
              <input type="hidden"
                name="_token"
                value="{{ csrf_token('delete_category' ~ category.id) }}" />
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
