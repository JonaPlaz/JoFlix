{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

<div class="col-12">
    <h1>Modifier une catégorie</h1>
</div>

{{ form_start(form) }}
    {{ form_row(form.name, {label: 'Nom de la catégorie'}) }}
